        .endMenu
            div(id="gameWin", style="display: none")
                | Congrat ! You win !
                button(id="newGameWinButton") New Game
            div(id="gameOver", style="display: none")
                | Too bad ! You loose !
                button(id="newGameOverButton") New Game
    .page-container
        .canvas-container
            .info-container
                .bombs-container
                    canvas(id="bombsCanvas")
                    div(id="bombs") 0
                div(id="timer") 0
            canvas(id="minesweeperCanvas")
    script(src="./js/main.bundle.js")
    script.
        const newGameWinButton = document.getElementById('newGameWinButton');
        const newGameOverButton = document.getElementById('newGameOverButton');
        newGameWinButton.addEventListener('click', function () {
            location.reload();
        });
        newGameOverButton.addEventListener('click', function () {
            location.reload();
        });




