block menu
    if showMenuBar
        .menu-container
            .menu
                a(class="menu-item" href="/") Home
                a(class="menu-item" href="/") Login
                a(class="menu-item" href="/") Leader Board
                .menu-item.dropdown-trigger
                    | Account
                    .dropdown-content
                        a(class="dropdown-item" href="/") Whaaaag
                a(class="menu-item" href="https://github.com/Gofreza/minesweeper") GitHub
                a(class="menu-item" href="/") Logout
                a(class="menu-item icon") <!-- Add an icon here, for example: -->
                    | &#9776; <!-- Unicode hamburger icon -->
    script.
        document.addEventListener('DOMContentLoaded', function () {
            const menuIcon = document.querySelector('.menu-item.icon');
            const menu = document.querySelector('.menu');

            menuIcon.addEventListener('click', function () {
                console.log('click');
                menu.classList.toggle('active');
            });
        });
